@page
@model LMS.Pages.Teacher.coursehomeModel
@{
    Layout = "teachercourselayout";
}
<style>
    body {
        background-color: #f0f8ff;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #6495ed;
        margin-bottom: 30px;
        font-size: 32px;
    }

    .table {
        width: 100%;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color: black; /* Set text color to black */
        }

        .table th {
            background-color: white;
            color:black;
        }

        .table a {
            color: black; /* Set link color to black */
            text-decoration: none;
        }

            .table a:hover {
                text-decoration: underline;
            }

    .text-center {
        text-align: center;
    }

    .add-task-button {
        text-align: right;
        margin-bottom: 20px;
    }

        .add-task-button button {
            background-color: #6495ed;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .add-task-button button:hover {
                background-color: #4169e1;
            }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
        }

    .btn {
        background-color: #fff;
        color: #6495ed;
        border: 2px solid #6495ed;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #6495ed;
            color: #fff;
        }

</style>

<div class="text-center">
    <table class="table table-borderless">
        <tr>
            <th>
                <a href="course">Course Name:</a>
            </th>

        </tr>
        <tr>
            <th>
                <a href="course">Material:</a>
            </th>
            <td colspan="3">
               
            </td>
        </tr>
        <tr>
            <th>
                <a id="addstudent-link">Add student</a>
            </th>
            <td colspan="3">
            </td>
        </tr>
        <tr>
            <th>
                <a id="add-assignment-link">Add Assignments</a>
            </th>
            <td colspan="3">
            </td>
        </tr>
        <tr>
            <th>
                <a id="addanouncement-link">Add anouncement</a>
            </th>
            <td colspan="3">
            </td>
        </tr>
        <tr>
            <th>
                <a id="addmaterial-link">Add material</a>
            </th>
            <td colspan="3">
            </td>
        </tr>
    </table>

    <div id="addstudent-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Add student</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="student-name">Student Name</label>
                    <input type="text" class="form-control" id="student-name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="student-id">Student ID</label>
                    <textarea class="form-control" id="student-id" name="id" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>


            </form>
        </div>
    </div>

    <div id="add-assignment-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>add assignment</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="assignment-name">Title:</label>
                    <input type="text" class="form-control" id="assignment-name" name="title" required>
                </div>
                <div class="form-group">
                    <label for="link-upload">Description:</label>
                    <textarea class="form-control" id="link-upload" name="link" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <div id="addanouncement-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>add anouncement</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="anouncement">Title:</label>
                    <input type="text" class="form-control" id="anouncement title" name="title" required>
                </div>
                <div class="form-group">
                    <label for="link-upload">Description:</label>
                    <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>


    <div id="addmaterial-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Add material</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="course-name">course Name</label>
                    <input type="text" class="form-control" id="course-name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="course-id">course code</label>
                    <textarea class="form-control" id="course-id" name="id" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>


            </form>
        </div>
    </div>
    @section scripts {
        <script>
            // Get the modal and link elements
            var studentModal = document.getElementById("addstudent-modal");
            var studentLink = document.getElementById("addstudent-link");

            // When the user clicks on the link, open the student modal
            studentLink.onclick = function () {
                studentModal.style.display = "block";
            }

            // Get the <span> element that closes the student modal
            var studentSpan = document.getElementsByClassName("close")[0];

            // When the user clicks on <span> (x), close the student modal
            studentSpan.onclick = function () {
                studentModal.style.display = "none";
            }

            // When the user clicks anywhere outside of the student modal, close it
            window.onclick = function (event) {
                if (event.target == studentModal) {
                    studentModal.style.display = "none";
                }
            }

            var assignmentModal = document.getElementById("add-assignment-modal");
            var assignmentLink = document.getElementById("add-assignment-link");

            // When the user clicks on the link, open the assignment modal
            assignmentLink.onclick = function () {
                assignmentModal.style.display = "block";
            }

            // Get the <span> element that closes the assignment modal
            var assignmentSpan = document.getElementsByClassName("close")[1];

            // When the user clicks on <span> (x), close the assignment modal
            assignmentSpan.onclick = function () {
                assignmentModal.style.display = "none";
            }

            // When the user clicks anywhere outside of the assignment modal, close it
            window.onclick = function (event) {
                if (event.target == assignmentModal) {
                    assignmentModal.style.display = "none";
                }
            }

            var announcementModal = document.getElementById("addanouncement-modal");
            var announcementLink = document.getElementById("addanouncement-link");

            // When the user clicks on the link, open the announcement modal
            announcementLink.onclick = function () {
                announcementModal.style.display = "block";
            }

            // Get the <span> element that closes the announcement modal
            var announcementSpan = document.getElementsByClassName("close")[2];

            // When the user clicks on <span> (x), close the announcement modal
            announcementSpan.onclick = function () {
                announcementModal.style.display = "none";
            }

            // When the user clicks anywhere outside of the announcement modal, close it
            window.onclick = function (event) {
                if (event.target == announcementModal) {
                    announcementModal.style.display = "none";
                }
            }

            var materialModal = document.getElementById("addmaterial-modal");
            var materialLink = document.getElementById("addmaterial-link");

            // When the user clicks on the link, open the announcement modal
            materialLink.onclick = function () {
                materialModal.style.display = "block";
            }

            // Get the <span> element that closes the announcement modal
            var materialSpan = document.getElementsByClassName("close")[3];

            // When the user clicks on <span> (x), close the announcement modal
            materialSpan.onclick = function () {
                materialModal.style.display = "none";
            }

            // When the user clicks anywhere outside of the announcement modal, close it
            window.onclick = function (event) {
                if (event.target == materialModal) {
                    materialModal.style.display = "none";
                }
            }
        </script>
    }

</div>