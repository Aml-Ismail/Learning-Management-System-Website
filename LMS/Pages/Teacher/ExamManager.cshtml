@page
@model LMS.Pages.Teacher.ExamManagerModel
@{
    Layout = "teacherlayout";
}
<style>
    body {
        background-color: #f0f8ff;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #6495ed;
    }

    .button-container {
        text-align: right;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #6495ed;
            color: #fff;
        }

        .table td a {
            text-decoration: none;
            color: #000;
            font-weight: bold;
        }

    .add-thread-button {
        text-align: center;
        margin-top: 20px;
    }

        .add-thread-button a {
            background-color: #6495ed;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

            .add-thread-button a:hover {
                background-color: #87ceeb;
            }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        width: 50%;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
        }

    .btn {
        background-color: #fff;
        color: #6495ed;
        border: 2px solid #6495ed;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #6495ed;
            color: #fff;
        }

    .table td, .table th {
        text-align: center;
    }
</style>



<table class="table table-borderless">
    <thead>
    <th>ID</th>
    <th>Student Name</th>
    <th>Grade</th>
    <th>Completion</th>
    </thead>
    @for (int i = 0; i < Model.dt.Rows.Count; i++)
    {
        <tr>
            <form method="post" asp-page-handler="Send">
                <td><input type="text" value="@Model.dt.Rows[i][0]" readonly name="id" /></td>
                <td>@Model.dt.Rows[i][1]</td>
                @if (string.IsNullOrEmpty(Model.dt.Rows[i][2].ToString()))
                {
                    <td><input type="number" placeholder="/100" name="grade" /> </td>
                    <td><input type="submit" name="name" value="Done" /></td>
                }
                else
                {
                    <td>@Model.dt.Rows[i][2]</td>
                }
            </form>
        </tr>
        }
</table>

<div>
    <div class="button-group">
        <button class="btn"><a id="check-link">Check Attendance</a></button>
    </div>
    <p>Exam Average: @Model.avg</p>
    <div id="check-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Check Attendance</h2>
            <table>
                <thead>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Attendance</th>
                </thead>
                @for(int i=0;i<Model.unattanded.Rows.Count;i++)
                {
                    <tr>
                        <form method="post" asp-page-handler="check">
                            <td>@Model.unattanded.Rows[i][0]</td>
                            <td><input type="text" value=@Model.unattanded.Rows[i][1] readonly name="ID" /></td>
                            <td><input type="submit" name="attendance" class="btn" value="Check"/></td>
                        </form>
                    </tr>
                }
            </table>

        </div>
        
    </div>

    <script>
        const modals = document.querySelectorAll('.modal');
        const links = document.querySelectorAll('.button-group .btn a');


        links.forEach((link, index) => {
            link.addEventListener('click', (event) => {
                event.preventDefault();
                modals[index].style.display = 'block';
            });
        });

        modals.forEach((modal, index) => {
            const closeButton = modal.querySelector('.close');
            closeButton.addEventListener('click', () => {
                modal.style.display = 'none';
            });
        });


        window.addEventListener('click', (event) => {
            modals.forEach((modal) => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });
        });
    </script>
</div>

  


