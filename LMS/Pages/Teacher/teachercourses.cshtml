@page
@model LMS.Pages.Teacher.teachercoursesModel
@{
    Layout = "teacherlayout.cshtml";
}
<style>
    body {
        background-color: #f0f8ff;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #6495ed;
        margin-bottom: 30px;
        font-size: 32px;
    }

    .button-container {
        text-align: right;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #6495ed;
            color: #fff;
        }

    .add-task-button {
        text-align: center;
        margin-top: 20px;
    }

        .add-task-button button {
            background-color: #fff;
            color: #6495ed;
            border: 2px solid #6495ed;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .add-task-button button:hover {
                background-color: #6495ed;
                color: #fff;
            }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
        }

    .btn {
        background-color: #fff;
        color: #6495ed;
        border: 2px solid #6495ed;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #6495ed;
            color: #fff;
        }
</style>

<table class="table table-borderless">
    <thead>
        <th>Course Name</th>
        <th>Course Code</th>
        <th>Semester</th>
        <th># of Students</th>
    </thead>
    <tr>
        <td><a href="coursehome">sample</a></td>
        <td>sample</td>
        <td>sample</td>
        <td>sample</td>
    </tr>
</table>
