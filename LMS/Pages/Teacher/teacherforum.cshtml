@page
@model LMS.Pages.Teacher.teacherforumModel
@{
    Layout = "teacherlayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Exchange your questions!</title>
    <style>
        body {
            background-color: #f0f8ff;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #6495ed;
        }

        .button-container {
            text-align: right;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

            .table th, .table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table th {
                background-color: #6495ed;
                color: #fff;
            }

            .table td a {
                text-decoration: none;
                color: #000;
                font-weight: bold;
            }

        .add-thread-button {
            text-align: center;
            margin-top: 20px;
        }

            .add-thread-button a {
                background-color: #6495ed;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 4px;
                text-decoration: none;
                display: inline-block;
                transition: background-color 0.3s ease;
            }

                .add-thread-button a:hover {
                    background-color: #87ceeb;
                }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            width: 50%;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
            }

        .btn {
            background-color: #fff;
            color: #6495ed;
            border: 2px solid #6495ed;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }

            .btn:hover {
                background-color: #6495ed;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Exchange your questions!</h1>
        <div class="button-container">
            <button class="btn" id="filter-link">Filter</button>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Threads</th>
                    <th>Courses</th>
                    <th>View</th>
                </tr>
            </thead>
            @for(int i=0;i<Model.dt.Rows.Count;i++)
            {
                <form method="post" asp-page-handler="View">
                <tr>
                    <td>
                        <input type="hidden" value="@Model.dt.Rows[i][0]" name="thread"/>
                        <label for="thread">@Model.dt.Rows[i][0]</label>
                    </td>
                    <td>
                        <input type="hidden" value="@Model.dt.Rows[i][1]" name="ccode" />
                        <label for="ccode">@Model.dt.Rows[i][1]</label>
                    </td>
                      
                    <td>
                        <input type="submit" class="btn" value="View Thread"/>
                    </td>
                </tr>
                </form>
            }
        </table>
        <div class="add-thread-button">
            <a href="AddForumPage">Add Thread</a>
        </div>
    </div>

    <div id="filter-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Filter threads</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">

                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="teacher" name="role" class="custom-control-input">
                        <label class="custom-control-label" for="teacher">Courses taught</label>



                        <div class="form-group">
                            <label for="filter-title">Course Code:</label>
                            <input type="text" class="form-control" id="filter-title" name="title" required>
                        </div>
                        <div class="form-group">
                            <label for="filter-title">Course Name:</label>
                            <input type="text" class="form-control" id="filter-title" name="title" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

    <script>
        var modal = document.getElementById("filter-modal");
        var link = document.getElementById("filter-link");

        link.onclick = function () {
            modal.style.display = "block";
        };

        var span = document.getElementsByClassName("close")[0];

        span.onclick = function () {
            modal.style.display = "none";
        };

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        };
    </script>
</body>
</html>