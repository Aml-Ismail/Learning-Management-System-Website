@{
}

<body>
    <div class="container">
        <div class="top-bar">
            <h1>
                Exchange your questions!
            </h1>
        </div>
        <div class="main">
            <div class="header">
                <h4 class="title">
                    Thread 1
                </h4>
                <div class="bottom">
                    <p class="timestamp">
                        2/5/2024
                    </p>
                    <p class="comment-count">
                        4 comments
                    </p>
                </div>
            </div>
            <textarea class="comment-input"></textarea>
            <button class="add-comment-button">Add Comment</button>
            <div class="comments">
                <div class="comment">
                    <div class="top-comment">
                        <hr />
                        <p class="user">
                            Allam
                        </p>
                        <p class="comment-ts">
                            2/5/2024
                        </p>
                    </div>
                    <div class="comment-content">
                        Comment kys kys kys
                    </div>
                </div>
                <div class="comment">
                    <div class="top-comment">
                        <hr />
                        <p class="user">
                            Allam
                        </p>
                        <p class="comment-ts">
                            2/5/2024
                        </p>
                    </div>
                    <div class="comment-content">
                        Comment kys kys kys
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        body {
            background-color: #f0f8ff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .top-bar {
            text-align: center;
            margin-bottom: 20px;
        }
        
        h1 {
            color: #6495ed;
        }
        
        .main {
            background-color: #fff;
            padding: 20px;
            border-radius: 6px;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .title {
            margin: 0;
            color: #333;
        }
        
        .bottom {
            display: flex;
            align-items: center;
        }
        
        .timestamp,
        .comment-count {
            margin: 0;
            margin-left: 10px;
            color: #777;
        }
        
        .comment-input {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
            margin-bottom: 10px;
        }
        
        .add-comment-button {
            background-color: #6495ed;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        
        .add-comment-button:hover {
            background-color: #87ceeb;
        }
        
        .comment {
            margin-bottom: 10px;
        }
        
        .top-comment {
            display: flex;
            align-items: center;
        }
        
        .top-comment hr {
            flex-grow: 1;
            margin: 0;
            border: none;
            border-top: 1px solid #ccc;
        }
        
        .user,
        .comment-ts {
            margin: 0;
            color: #777;
            margin-right: 10px;
        }
        
        .comment-content {
            margin-top: 10px;
            padding-left: 10px;
            border-left: 2px solid #ccc;
            color: #333;
        }
    </style>
</body>
