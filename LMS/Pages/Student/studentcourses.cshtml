@page
@model studentcoursesModel
@{
    Layout = "studentlayout.cshtml";
}

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 800px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>
<div class="text-center">
    <table class="table table-borderless">
        <tr>
            <th>
                <a href="course">Course Name:</a>
            </th>
            
        </tr>
        <tr>
            <th>
                <a href="course">Material:</a>
            </th>
            <td colspan="3">
                <"add the link">
            </td>
        </tr>
        <tr>
            <th>
                <a id="feedback-link">Give Feedback:</a>
            </th>
            <td colspan="3">
               
            </td>
        </tr>
        <tr>
            <th>
                <a id="submit-assignment-link">Assignments:</a>
            </th>
            <td colspan="3">
               
            </td>
        </tr>
        <tr>
            <th>
                <a href="thread">Open Thread:</a>
            </th>
            <td colspan="3">
               
            </td>
        </tr>
    </table>
   
    <div id="feedback-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Give Feedback</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="feedback-title">Title:</label>
                    <input type="text" class="form-control" id="feedback-title" name="title" required>
                </div>
                <div class="form-group">
                    <label for="feedback-description">Description:</label>
                    <textarea class="form-control" id="feedback-description" name="description" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <div id="submit-assignment-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>submit assignment</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="assignment name">Title:</label>
                    <input type="text" class="form-control" id="assignment name" name="title" required>
                </div>
                <div class="form-group">
                    <label for="link upload">Description:</label>
                    <textarea class="form-control" id="link upload" name="link" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

    @section scripts {
        <script>
            // Get the modal and link elements
            var modal = document.getElementById("feedback-modal");
            var link = document.getElementById("feedback-link");
           

            // When the user clicks on the link, open the modal
            link.onclick = function() {
                modal.style.display = "block";
            }

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];

            // When the user clicks on <span> (x), close the modal
            span.onclick = function() {
                modal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }


            var assignmentModal = document.getElementById("submit-assignment-modal");
            var assignmentLink = document.getElementById("submit-assignment-link");

            // When the user clicks on the link, open the assignment modal
            assignmentLink.onclick = function () {
                assignmentModal.style.display = "block";
            }

            // Get the <span> element that closes the assignment modal
            var assignmentSpan = document.getElementsByClassName("close")[1];

            // When the user clicks on <span> (x), close the assignment modal
            assignmentSpan.onclick = function () {
                assignmentModal.style.display = "none";
            }

            // When the user clicks anywhere outside of the assignment modal, close it
            window.onclick = function (event) {
                if (event.target == assignmentModal) {
                    assignmentModal.style.display = "none";
                }
            }
        </script>
    }
    }
</div>