@page
@model studenthomeModel
@{
    Layout = "studentlayout.cshtml";
}
<h1>Welcome name</h1> 
<div class="text-center">
<form method="post">
    <table class="table table-hover table-responsive table-striped">
        <thead class="bg-black text-light">
        <th>#</th>
        <th>Task</th>
        <th>Completion</th>
        </thead>
        @{
            for (int i = 0; i < Model.tasks.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model.tasks[i]</td>
                    <td><button name="id" class="bg-success text-light btn " value=@i>Done</button></td>
                </tr>
            }
        }

    </table>
    <input type="submit" name="id" value="Add Task" class="bg-primary text-light btn" />
</form>
</div>
