@page
@using System.Data
@model studenthomeModel

@{
    Layout = "studentlayout.cshtml";
}

<style>
    body {
        background-color: #f0f8ff;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #6495ed;
        margin-bottom: 30px;
        font-size: 32px;
    }

    .button-container {
        text-align: right;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #6495ed;
            color: #fff;
        }

    .add-task-button {
        text-align: center;
        margin-top: 20px;
    }

        .add-task-button button {
            background-color: #fff;
            color: #6495ed;
            border: 2px solid #6495ed;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .add-task-button button:hover {
                background-color: #6495ed;
                color: #fff;
            }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        width: 50%;
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
        }

    .btn {
        background-color: #fff;
        color: #6495ed;
        border: 2px solid #6495ed;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #6495ed;
            color: #fff;
        }

</style>
<div class="container">
    <h1>Welcome <span class="name">Name</span></h1>
    <div class="text-center">
        <form method="post">
            <table class="table table-hover table-responsive table-striped">
                <thead class="bg-black text-light">
                <th>#</th>
                <th>Task</th>
                <th>Completion</th>
                </thead>
                @for (int i = 0; i < Model.dt.Rows.Count; i++)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@Model.dt.Rows[i][0]</td>
                       
                    </tr>
                }
            </table>
        </form>
    </div>
    <form>
        <table>
            <div class="button-container">
                <div class="add-task-button">
                    <button type="button" id="add-task-link">Add task</button>
                </div>
            </div>
        </table>
    </form>
</div>
</div>
<div id="add-task-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Add Task</h2>
        <form method="post" asp-page-handler="AddTask">
            <div class="form-group">
                <label for="task-name">Task name:</label>
                <input type="text" class="form-control" id="task-name" name="task" required>
            </div>
            <div class="form-group">
                <label for="course-code">Course Code:</label>
                <input type="text" class="form-control" id="course-code" name="ccode" required>
            </div>
            <div class="form-group">
                <label for="semester">Semester:</label>
                <input type="text" class="form-control" id="semester" name="sem" required>
            </div>
            <div class="button-container">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<script>
    // Get the modal and link elements
    var addTaskModal = document.getElementById("add-task-modal");
    var addTaskLink = document.getElementById("add-task-link");

    // When the user clicks on the link, open the modal
    addTaskLink.onclick = function () {
        addTaskModal.style.display = "block";
    };

    // Get the <span> element that closes the modal
    var span = addTaskModal.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        addTaskModal.style.display = "none";
    };

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == addTaskModal) {
            addTaskModal.style.display = "none";
        }
    };
</script>

