@page
@model LMS.Pages.Student.coursehomeModel
@{
}
<style>
    body {
        background-color: #f0f8ff;
        font-family: Arial, sans-serif;
    }

    /* Add this new class */
    .modal-link {
        color: #000000;
        text-decoration: none;
        font-family: Arial, sans-serif;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 800px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    .text-center {
        text-align: center;
    }

    .table {
        margin: 0 auto;
        width: 80%;
        max-width: 800px;
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .table th {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .table td {
            padding: 10px;
        }

    .btn {
        background-color: #6495ed;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #87ceeb;
    }

        .btn-primary:hover {
            background-color: #6495ed;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    textarea.form-control {
        resize: vertical;

</style>


<div class="text-center">
    <table class="table table-borderless">
        <tr>
            <th>
                CIE 202</>
            </th>
        </tr>
        <tr>
            <th>
                Material </>
            </th>
            <td colspan="3">
            </td>
        </tr>
        <tr>
            <th>
                <a class="modal-link-button" id="feedback-link">Give Feedback</a>
            </th>
            <td colspan="3">
            </td>
        </tr>
        <tr>
            <th>
                <a class="modal-link-button" id="submit-assignment-link">Submit Assignments</a>
            </th>
            <td colspan="3">
            </td>
        </tr>

    </table>

    <div id="feedback-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Give Feedback</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="feedback-title">Title:</label>
                    <input type="text" class="form-control" id="feedback-title" name="title" required>
                </div>
                <div class="form-group">
                    <label for="feedback-description">Description:</label>
                    <textarea class="form-control" id="feedback-description" name="description" rows="3" required></textarea>
                </div>
                <div class="button-container">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div id="submit-assignment-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Submit Assignment</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="assignment-name">Title:</label>
                    <input type="text" class="form-control" id="assignment-name" name="title" required>
                </div>
                <div class="form-group">
                    <label for="link-upload">Description:</label>
                    <textarea class="form-control" id="link-upload" name="link" rows="3" required></textarea>
                </div>
                <div class="button-container">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Get the modal and link elements
        var modal = document.getElementById("feedback-modal");
        var link = document.getElementById("feedback-link");

        // When the user clicks on the link, open the modal
        link.onclick = function () {
            modal.style.display = "block";
        };

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        };

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        };

        var assignmentModal = document.getElementById("submit-assignment-modal");
        var assignmentLink = document.getElementById("submit-assignment-link");

        // When the user clicks on the link, open the assignment modal
        assignmentLink.onclick = function () {
            assignmentModal.style.display = "block";
        };

        // Get the <span> element that closes the assignment modal
        var assignmentSpan = document.getElementsByClassName("close")[1];

        // When the user clicks on <span> (x), close the assignment modal
        assignmentSpan.onclick = function () {
            assignmentModal.style.display = "none";
        };

        // When the user clicks anywhere outside of the assignment modal, close it
        window.onclick = function (event) {
            if (event.target == assignmentModal) {
                assignmentModal.style.display = "none";
            }
        };
    </script>
</div>