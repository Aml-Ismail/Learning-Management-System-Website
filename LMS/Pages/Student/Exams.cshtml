@page
@model ExamsModel
@{
    Layout = "studentlayout.cshtml";
}
<style>
    body {
        background-color: white;
        color: #000000;
    }

    .container {
        margin-top: 50px;
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    h1 {
        font-size: 36px;
        color: black;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    table {
        border-collapse: collapse;
        width: 100%;
        background-color: #ffffff;
    }

    th,
    td {
        border: 1px solid #ffffff;
        padding: 8px;
        text-align: left;
        color: #000000;
    }

    th {
        background-color: #87ceeb;
        color: #ffffff;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f5f5f5;
    }

    tr:hover {
        background-color: #d7f0ff;
    }
</style>
<body>
    <div class="container">
        <h1>Exams</h1>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Course Name</th>
                    <th>Venue</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model.Exams)
                {
                    <tr>
                        <td>@exam.Id</td>
                        <td>@exam.CourseName</td>
                        <td>@exam.Venue</td>
                        <td>@exam.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>