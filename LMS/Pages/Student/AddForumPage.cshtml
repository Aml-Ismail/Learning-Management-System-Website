@page
@model LMS.Pages.Student.AddForumPageModel
@{
    Layout = "studentlayout.cshtml";

}


<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #f0f8ff;
            font-family: Arial, sans-serif;
        }

        .top-bar {
            background-color: #6495ed;
            padding: 10px;
            text-align: center;
            color: #fff;
        }

        .main {
            padding: 20px;
        }

        .header {
            margin-bottom: 20px;
        }

        .title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        input[type="text"], textarea {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            margin-bottom: 10px;
            resize: vertical;
        }

        .bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .timestamp {
            font-size: 12px;
            color: #888;
        }
    </style>
</head>
<body>
    <div class="top-bar">
        <h1>Create Thread!</h1>
    </div>
    <div class="main">
        <div class="header">
            <h4 class="title">
                Title
                <input type="text">
            </h4>
            <div class="bottom">
                <p class="timestamp">

                </p>
            </div>
        </div>
        <div>
            Course Code
            <input type="text">
        </div>
       

        </div>
        <div>
            Questions
            <input type="text">
    </div>
    
</body>
</html>