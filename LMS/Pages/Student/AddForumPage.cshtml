@page
@model LMS.Pages.Student.AddForumPageModel
@{
    Layout = "studentlayout.cshtml";

}


<body>
    <div class="container">
        <div class="top-bar">
            <h1>
                Create Thread!
            </h1>
        </div>
        <div class="main">
            <form class="thread-form">
                <div class="form-group">
                    <label for="title-input">Title:</label>
                    <input type="text" id="title-input" class="title-input" placeholder="Enter thread title">
                </div>
                <div class="form-group">
                    <label for="course-code-input">Course Code:</label>
                    <input type="text" id="course-code-input" class="course-code-input" placeholder="Enter course code">
                </div>
                <div class="form-group">
                    <label for="questions-input">Questions:</label>
                    <textarea id="questions-input" class="questions-input" placeholder="Enter your questions here"></textarea>
                </div>
                <button type="submit" class="create-thread-button">Create Thread</button>
            </form>
        </div>
    </div>
</body>
</html>
<style>
    :root {
        --primary-color: #6495ed;
        --background-color: #f0f8ff;
        --font-family: Arial, sans-serif;
        --padding: 20px;
    }

    body {
        background-color: var(--background-color);
        font-family: var(--font-family);
    }

    .container {
        max-width: 800px;
        padding: var(--padding);
    }

    .top-bar {
        text-align: center;
    }

    h1 {
        color: var(--primary-color);
    }

    .main {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 800px;
    }

    .form-group {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: var(--padding);
    }

        .form-group label {
            width: 20%;
            text-align: right;
            margin-right: 10px;
        }

    .input-field {
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 80%;
    }

    .questions-input {
        height: 200px;
    }

    .create-thread-button {
        background-color: var(--primary-color);
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        .create-thread-button:hover {
            background-color: #87ceeb;
        }
</style>

