@page
@model LMS.Pages.Student.ForumPageModel
@{
    Layout = "studentLayout";
}
<style>
    body {
        background-color: #f0f8ff;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #6495ed;
        margin-bottom: 30px;
        font-size: 32px;
    }

    .button-container {
        text-align: right;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #6495ed;
            color: #fff;
        }

    .add-task-button {
        text-align: center;
        margin-top: 20px;
    }

        .add-task-button button {
            background-color: #fff;
            color: #6495ed;
            border: 2px solid #6495ed;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .add-task-button button:hover {
                background-color: #6495ed;
                color: #fff;
            }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
        }

    .btn {
        background-color: #fff;
        color: #6495ed;
        border: 2px solid #6495ed;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #6495ed;
            color: #fff;
        }
</style>
<body>
    <div class="top-bar">
        <h1 class="text-light">
            Exchange your questions!
        </h1>
    </div>
    <div class="main-container">
        <div class="main">
            <div class="header">
                <h4 class="title">@Model.title</h4>
                <h6>@Model.question</h6>
                <div class="bottom">
                    <p class="name">@Model.user</p>
                    <p class="timestamp">@Model.date</p>
                    <p class="comment-count">@Model.dt.Rows.Count.ToString()</p>
                </div>
            </div>
            <div>
                <form method="post" asp-page-handler="comment">
                    <textarea name="comm"></textarea>
                    <input type="submit" class="btn" value="Add Comment" />
                </form>
            </div>


            <div class="comments">
                @for (int i = 0; i < Model.dt.Rows.Count; i++)
                {
                    <div class="comment">
                        <div class="top-comment">
                        </div>
                        <div class="comment-content">
                            @Model.dt.Rows[i][0]
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <style>
        body {
            margin: 10px 60px;
        }

        a {
            text-decoration: none;
            color: black;
        }

        h1, h2, h3, h4, h5, h6, ol {
            margin: 0;
        }

        p {
            margin: 5px 0;
        }

        textarea {
            width: 80%;
            height: 100px;
            background-color: #e5f2ff;
            border: 1px solid #91a7ff;
            border-radius: 5px;
            padding: 10px;
        }

        button {
            display: block;
            margin: 10px 0;
            background-color: lightblue;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: lightblue;
            }

        .row {
            padding: 5px 0;
        }

        .top-bar {
            background-color: dodgerblue;
            padding: 10px 40px;
        }

        .main {
            background-color: #e5f2ff;
            padding: 10px 15px;
            border: 1px solid #91a7ff;
            border-radius: 5px;
        }

        .comments {
            margin: 40px 0;
        }

        .comment {
            margin: 10px 0;
            background-color: #e5f2ff;
            padding: 10px;
            border: 1px solid #91a7ff;
            border-radius: 5px;
        }

        .bottom, .top-comment {
            display: flex;
            color: black;
            font-size: 12px;
        }

        .comment-ts {
            padding-left: 10px;
        }

        .timestamp {
            padding-right: 10px;
        }
    </style>
</body>